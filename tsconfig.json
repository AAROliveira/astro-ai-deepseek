{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    // Inclui os tipos necess√°rios
    "types": [
      "vite/client",
      "react",
      "react-dom",
      "./src/types/global.d.ts"
    ]
  },
  "include": [
    "src",
    "astro.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}